<?xml version="1.0" ?>
<enemy>
    <behaviour>
        <root x="110" y="40">
            <normal>
                <condition id="getBoolEquals">
                    <string id="id">Toolkit_Ticker_Event_5thTick</string>
                    <string id="value" values="yesno">yes</string>
                    <string id="Comment">Ping Bots Every 5th Tick</string>
                    <normal>
                        <action id="emitMessageInArea">
                            <string id="id">botPing</string>
                            <string id="receive groups" values="target receive groups" multiselect="true">PLAYERS;;</string>
                            <string id="teams" values="teamswithtarget" multiselect="true">OWN_TEAM;;</string>
                            <float id="xOffset">0.00</float>
                            <float id="yOffset">0.00</float>
                            <float id="width">200.00</float>
                            <float id="height">200.00</float>
                            <string id="ignore invisibility" values="yesno">yes</string>
                            <string id="check line of sight" values="yesno">no</string>
                        </action>
                    </normal>
                </condition>
                <condition id="receivedMessage">
                    <string id="id">botPing</string>
                    <normal>
                        <action id="adjustCounter">
                            <string id="id">Toolkit_BotCollab_Pinger_lastBotCount</string>
                            <string id="value">Toolkit_BotCollab_Pinger_botCount</string>
                            <string id="adjust method" values="valueadjust">set</string>
                        </action>
                        <action id="adjustCounter">
                            <string id="id">Toolkit_BotCollab_Pinger_botCount</string>
                            <string id="value">1</string>
                            <string id="adjust method" values="valueadjust">set</string>
                        </action>
                        <action id="emitMessageInArea">
                            <string id="id">botHere</string>
                            <string id="receive groups" values="target receive groups" multiselect="true">PLAYERS;;</string>
                            <string id="teams" values="teamswithtarget" multiselect="true">OWN_TEAM;;</string>
                            <float id="xOffset">0.00</float>
                            <float id="yOffset">0.00</float>
                            <float id="width">200.00</float>
                            <float id="height">200.00</float>
                            <string id="ignore invisibility" values="yesno">yes</string>
                            <string id="check line of sight" values="yesno">no</string>
                        </action>
                    </normal>
                </condition>
                <condition id="receivedMessage">
                    <string id="id">botHere</string>
                    <normal>
                        <action id="adjustCounter">
                            <string id="id">Toolkit_BotCollab_Pinger_botCount</string>
                            <string id="value">1</string>
                            <string id="adjust method" values="valueadjust">add</string>
                        </action>
                    </normal>
                </condition>
                <condition id="receivedMessage">
                    <string id="id">botPingUID</string>
                    <string id="Comment">Report UID</string>
                    <normal>
                        <condition id="isUpgradeEnabled">
                            <string id="condition" values="yesno">yes</string>
                            <string id="upgrade name">TutorialListen</string>
                            <string id="Comment">I&apos;m Bot 1</string>
                            <normal>
                                <action id="emitMessageInArea">
                                    <string id="id">respondBot1</string>
                                    <string id="receive groups" values="target receive groups" multiselect="true">PLAYERS;;</string>
                                    <string id="teams" values="teamswithtarget" multiselect="true">OWN_TEAM;;</string>
                                    <float id="xOffset">0.00</float>
                                    <float id="yOffset">0.00</float>
                                    <float id="width">200.00</float>
                                    <float id="height">200.00</float>
                                    <string id="ignore invisibility" values="yesno">yes</string>
                                    <string id="check line of sight" values="yesno">no</string>
                                </action>
                            </normal>
                        </condition>
                        <condition id="isUpgradeEnabled">
                            <string id="condition" values="yesno">yes</string>
                            <string id="upgrade name">TutorialOpening</string>
                            <string id="Comment">I&apos;m Bot 2</string>
                            <normal>
                                <action id="emitMessageInArea">
                                    <string id="id">respondBot2</string>
                                    <string id="receive groups" values="target receive groups" multiselect="true">PLAYERS;;</string>
                                    <string id="teams" values="teamswithtarget" multiselect="true">OWN_TEAM;;</string>
                                    <float id="xOffset">0.00</float>
                                    <float id="yOffset">0.00</float>
                                    <float id="width">200.00</float>
                                    <float id="height">200.00</float>
                                    <string id="ignore invisibility" values="yesno">yes</string>
                                    <string id="check line of sight" values="yesno">no</string>
                                </action>
                            </normal>
                        </condition>
                        <condition id="isUpgradeEnabled">
                            <string id="condition" values="yesno">yes</string>
                            <string id="upgrade name">TutorialTalk</string>
                            <string id="Comment">I&apos;m Bot 3</string>
                            <normal>
                                <action id="emitMessageInArea">
                                    <string id="id">respondBot3</string>
                                    <string id="receive groups" values="target receive groups" multiselect="true">PLAYERS;;</string>
                                    <string id="teams" values="teamswithtarget" multiselect="true">OWN_TEAM;;</string>
                                    <float id="xOffset">0.00</float>
                                    <float id="yOffset">0.00</float>
                                    <float id="width">200.00</float>
                                    <float id="height">200.00</float>
                                    <string id="ignore invisibility" values="yesno">yes</string>
                                    <string id="check line of sight" values="yesno">no</string>
                                </action>
                            </normal>
                        </condition>
                    </normal>
                </condition>
                <condition id="checkCounter">
                    <string id="id">Toolkit_BotCollab_Pinger_botCount</string>
                    <string id="value">Toolkit_BotCollab_Pinger_lastBotCount</string>
                    <string id="compare method" values="valuecompare">less</string>
                    <string id="Comment">Bot Left?</string>
                    <normal>
                        <action id="adjustCounter">
                            <string id="id">Toolkit_BotCollab_Pinger_lastBotCount</string>
                            <string id="value">Toolkit_BotCollab_Pinger_botCount</string>
                            <string id="adjust method" values="valueadjust">set</string>
                            <string id="Comment">Prevents Second Execution</string>
                        </action>
                        <action id="emitMessageInArea">
                            <string id="id">botPingUID</string>
                            <string id="receive groups" values="target receive groups" multiselect="true">PLAYERS;;</string>
                            <string id="teams" values="teamswithtarget" multiselect="true">OWN_TEAM;;</string>
                            <float id="xOffset">0.00</float>
                            <float id="yOffset">0.00</float>
                            <float id="width">200.00</float>
                            <float id="height">200.00</float>
                            <string id="ignore invisibility" values="yesno">yes</string>
                            <string id="check line of sight" values="yesno">no</string>
                            <string id="Comment">Ask for UID&apos;s</string>
                        </action>
                    </normal>
                </condition>
                <orblock>
                    <string id="Comment">Bots Responded with UID&apos;s?</string>
                    <normal>
                        <condition id="receivedMessage">
                            <string id="id">respondBot1</string>
                            <normal>
                                <action id="setBool">
                                    <string id="id">Toolkit_BotCollab_Main_bot1Exists</string>
                                    <string id="value" values="flagtoggle">yes</string>
                                </action>
                            </normal>
                            <else>
                                <action id="setBool">
                                    <string id="id">Toolkit_BotCollab_Main_bot1Exists</string>
                                    <string id="value" values="flagtoggle">no</string>
                                </action>
                                <action id="log">
                                    <string id="text">Bot 1 Left</string>
                                    <string id="counter"></string>
                                    <string id="bool"></string>
                                </action>
                            </else>
                        </condition>
                        <condition id="receivedMessage">
                            <string id="id">respondBot2</string>
                            <normal>
                                <action id="setBool">
                                    <string id="id">Toolkit_BotCollab_Main_bot2Exists</string>
                                    <string id="value" values="flagtoggle">yes</string>
                                </action>
                            </normal>
                            <else>
                                <action id="setBool">
                                    <string id="id">Toolkit_BotCollab_Main_bot2Exists</string>
                                    <string id="value" values="flagtoggle">no</string>
                                </action>
                                <action id="log">
                                    <string id="text">Bot 2 Left</string>
                                    <string id="counter"></string>
                                    <string id="bool"></string>
                                </action>
                            </else>
                        </condition>
                        <condition id="receivedMessage">
                            <string id="id">respondBot3</string>
                            <normal>
                                <action id="setBool">
                                    <string id="id">Toolkit_BotCollab_Main_bot3Exists</string>
                                    <string id="value" values="flagtoggle">yes</string>
                                </action>
                            </normal>
                            <else>
                                <action id="setBool">
                                    <string id="id">Toolkit_BotCollab_Main_bot3Exists</string>
                                    <string id="value" values="flagtoggle">yes</string>
                                </action>
                                <action id="log">
                                    <string id="text">Bot 3 Left</string>
                                    <string id="counter"></string>
                                    <string id="bool"></string>
                                </action>
                            </else>
                        </condition>
                    </normal>
                    <or>
                        <condition id="receivedMessage">
                            <string id="id">respondBot1</string>
                        </condition>
                        <condition id="receivedMessage">
                            <string id="id">respondBot2</string>
                        </condition>
                        <condition id="receivedMessage">
                            <string id="id">respondBot3</string>
                        </condition>
                    </or>
                </orblock>
            </normal>
        </root>
    </behaviour>
</enemy>
